<Page
    x:Class="ItAssetTool.Views.DiagnosticPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ItAssetTool.ViewModels"
    xmlns:core="using:ItAssetTool.Core"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="系统诊断" Style="{ThemeResource TitleTextBlockStyle}"/>
            <Button Content="开始系统诊断"
                    Command="{Binding RunDiagnosticsCommand}"
                    IsEnabled="{Binding IsDiagnosing, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"
                    Margin="20,0,0,0"/>

            <ProgressRing IsActive="{Binding IsDiagnosing, Mode=OneWay}" Margin="10,0,0,0"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding DiagnosticResults, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="core:DiagnosticResult">
                    <Border CornerRadius="10" BorderBrush="#DDD" BorderThickness="1" Margin="0,6,0,0" Padding="16,8">
                        <StackPanel Margin="5" Spacing="4">
                            <TextBlock Text="{x:Bind Task}" FontWeight="Bold"/>
                            <TextBlock>
    
                                <Run Text="状态: "/>
                                <Run Text="{x:Bind Status}" FontWeight="SemiBold"/>
                            </TextBlock>

                            <TextBlock Text="{x:Bind Message}" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Grid>
</Page>