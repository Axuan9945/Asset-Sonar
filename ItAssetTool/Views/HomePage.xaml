<Page
    x:Class="ItAssetTool.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ItAssetTool.ViewModels"
    xmlns:controls="using:ItAssetTool.Controls" 
    xmlns:core="using:ItAssetTool.Core"
    xmlns:local="using:ItAssetTool.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <local:BooleanToOnOffConverter x:Key="BooleanToOnOffConverter"/>
        <Style x:Key="CompactToggleSwitchStyle" TargetType="ToggleSwitch">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="OnContent" Value=""/>
            <Setter Property="OffContent" Value=""/>
        </Style>

        <Style x:Key="HomePageListItemContainerStyle" TargetType="ListViewItem" BasedOn="{StaticResource SettingsListItemContainerStyle}">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
    </Page.Resources>

    <Grid ColumnDefinitions="*, *">
        <Grid Grid.Column="0" Margin="20">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Style="{StaticResource ActionCardBorderStyle}" Margin="0,0,0,12">
                    <StackPanel Spacing="10">
                        <TextBlock Text="扫描模块" Style="{ThemeResource TitleTextBlockStyle}"/>
                        <ListView ItemsSource="{Binding ScanPlugins}" 
                                  SelectionMode="None"
                                  ShowsScrollingPlaceholders="False"
                                  Padding="0"
                                  ItemContainerStyle="{StaticResource HomePageListItemContainerStyle}"
                                  MaxHeight="350">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="vm:SelectablePluginViewModel">
                                    <Grid Padding="12,0,8,0" Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center" />
                                        <CheckBox Grid.Column="1" 
                                                  IsChecked="{x:Bind IsEnabled, Mode=TwoWay}" 
                                                  VerticalAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Style="{StaticResource ActionCardBorderStyle}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="操作" Style="{ThemeResource TitleTextBlockStyle}"/>
                        <Button Content="{Binding ScanButtonText, Mode=OneWay}"
                                Command="{Binding ScanCommand}"
                                IsEnabled="{Binding IsScanning, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"
                                HorizontalAlignment="Stretch"/>
                        <ProgressBar IsIndeterminate="{Binding IsScanning, Mode=OneWay}"
                                     Visibility="{Binding IsScanning, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="导出选项" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="0,5,0,0"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button Content="CSV"
                                    Command="{Binding ExportCommand}" CommandParameter="CSV"
                                    IsEnabled="{Binding IsScanning, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"/>
                            <Button Content="Excel"
                                    Command="{Binding ExportCommand}" CommandParameter="Excel"
                                    IsEnabled="{Binding IsScanning, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"/>
                            <Button Content="PDF"
                                    Command="{Binding ExportCommand}" CommandParameter="PDF"
                                    IsEnabled="{Binding IsScanning, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"/>
                        </StackPanel>
                        <Button Content="同步到 Snipe-IT"
                                Command="{Binding SyncCommand}"
                                IsEnabled="{Binding IsScanning, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"
                                HorizontalAlignment="Stretch"
                                Background="{ThemeResource SystemAccentColor}"
                                Foreground="White"/>
                    </StackPanel>
                </Border>
            </Grid>
            <Border Grid.Column="1" Style="{StaticResource ActionCardBorderStyle}">
                <Grid RowDefinitions="Auto, *, Auto">
                    <TextBlock Grid.Row="0" Text="日志输出" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBox Grid.Row="1" Text="{Binding LogText, Mode=OneWay}"
                             Margin="0,10,0,0"
                             IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                    <TextBlock Grid.Row="2" Text="Axuan 与 Gemini 联合制作"
                               Margin="0,5,0,0" HorizontalAlignment="Right"
                               Foreground="Gray" Tapped="SignatureLabel_Tapped"/>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Column="1" Margin="0,20,20,20" RowDefinitions="Auto, *">
            <controls:HardwareSummaryView Grid.Row="0"
                                          DataContext="{Binding HardwareSummary}"
                                          Margin="0,0,0,12"/>
            <ListView Grid.Row="1" 
                      ItemsSource="{Binding ScannedData, Mode=OneWay}">
                <ListView.Header>
                    <TextBlock Text="详细硬件列表" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="5,0"/>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="core:HardwareInfo">
                        <StackPanel Margin="5" Spacing="4">
                            <TextBlock Text="{x:Bind Category}" FontWeight="Bold"/>
                            <TextBlock>
                                <Run Text="{x:Bind Brand}"/>
                                <Run Text="{x:Bind Model}"/>
                            </TextBlock>
                            <TextBlock Text="{x:Bind SerialNumber}" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>