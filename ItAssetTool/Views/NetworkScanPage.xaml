<Page
    x:Class="ItAssetTool.Views.NetworkScanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ItAssetTool.ViewModels"
    xmlns:core="using:ItAssetTool.Core"
    xmlns:conv="using:ItAssetTool.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <conv:StatusToColorConverter x:Key="StatusToColorConverter" />
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="20" Margin="0,0,0,20">
            <TextBlock Text="网络扫描" Style="{ThemeResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            <Button Content="开始扫描"
                    Command="{Binding ScanNetworkCommand}"
                    IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"/>
            <Button Content="停止扫描"
                    Command="{Binding CancelScanCommand}"
                    Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <ProgressRing IsActive="{Binding IsScanning}" />
        </StackPanel>

        <GridView Grid.Row="1" 
           ItemsSource="{Binding ScannedDevices}"
           SelectionMode="None"
                  IsItemClickEnabled="False">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="core:NetworkDevice">
                    <Border Width="190" 
                            Height="110" 
                            Margin="8" 
                            Padding="16" 
                            CornerRadius="8"
                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">

                        <Grid RowDefinitions="Auto, *, Auto">
                            <TextBlock 
                                Grid.Row="0" 
                                Text="{x:Bind IpAddress}" 
                                Style="{ThemeResource SubtitleTextBlockStyle}"
                                FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1"
                                       Text="{x:Bind HostName}" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"/>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind Status}"
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Opacity="0.8" />
                                <TextBlock Text="{x:Bind LatencyText, Mode=OneWay}"
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Opacity="0.8" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>

            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Center" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</Page>